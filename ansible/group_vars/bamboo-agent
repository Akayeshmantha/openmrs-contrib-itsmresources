---
# Add tmpreaper cron jobs to bamboo agents
crontab:
 Clean all files older than 1 day in /tmp at 0400:
  user: root
  minute: 0
  hour: 4
  job: /usr/sbin/tmpreaper 1d /tmp/ -a -T 120
 Clean all files older than 1 day in build agent1 at 0415:
  user: root
  minute: 15
  hour: 4
  job:  /usr/sbin/tmpreaper 1d /home/bamboo-agent-1/bamboo-agent/xml-data/build-dir/ -a -T 120
 Clean all files older than 1 day in build agent2 at 0430:
  user: root
  minute: 30
  hour: 4
  job: /usr/sbin/tmpreaper 1d /home/bamboo-agent-2/bamboo-agent/xml-data/build-dir/ -a -T 120
