# Docker host (jetstream) with openmrs instances
users:
 bamboo:
  comment: CI Bamboo User
  groups: 'admin'
  ssh_key: "ssh-rsa  bambooagent"
 djazayeri:
  comment: Darius Jazayeri
  groups: 'admin'
  ssh_key: "ssh-rsa  jazayeri@alum.mit.edu"
 ball:
  comment: Ellen Ball
  groups: 'admin'
  ssh_key: "ssh-rsa  ball@ball-ThinkPadT450-2015"

datadog_tags_extra:
  - "service:openmrs-refapp"

docker_deployment:
 - ebola

docker_deployable_images: []

letsencrypt_cert_domains:
  - mombasa.openmrs.org
  - ebola-demo.openmrs.org

nginx_vhosts:
 - listen: "80 default_server"
   server_name: "ebola-demo.openmrs.org"
   extra_parameters: |
     return 301 https://$host$request_uri;
 - listen: "443 ssl"
   server_name: "ebola-demo.openmrs.org"
   extra_parameters: |
     access_log /var/log/nginx/demo_access.log;
     error_log /var/log/nginx/demo_error.log;
     ssl_certificate /etc/letsencrypt/live/mombasa.openmrs.org/fullchain.pem;
     ssl_certificate_key /etc/letsencrypt/live/mombasa.openmrs.org/privkey.pem;
     location ^~ /.well-known/acme-challenge/ {
       root /usr/share/nginx/html;
     }
     location / {
       return 301 https://ebola-demo.openmrs.org/openmrs;
     }
     location /openmrs {
       proxy_set_header HOST $host;
       proxy_set_header  X-Forwarded-Proto $scheme;
       proxy_pass http://127.0.0.1:8080/openmrs;
     }

 - listen: "443 ssl"
   server_name: "mombasa.openmrs.org"
   extra_parameters: |
     access_log /var/log/nginx/deployer_access.log;
     error_log /var/log/nginx/deployer_error.log;
     ssl_certificate /etc/letsencrypt/live/mombasa.openmrs.org/fullchain.pem;
     ssl_certificate_key /etc/letsencrypt/live/mombasa.openmrs.org/privkey.pem;
     location ^~ /.well-known/acme-challenge/ {
       root /usr/share/nginx/html;
     }
     location / {
       proxy_pass http://127.0.0.1:3000/;
     }
