---
# Docker host (jetstream) with openmrs refapp
users:
 bamboo:
  comment: CI Bamboo User
  groups: 'admin'
  ssh_key: "ssh-rsa  bambooagent"
 maurya:
   comment: Maurya
   groups: 'admin'
   ssh_key: "ssh-rsa  maurya@zatara.local"

datadog_config:
  tags: "provider:jetstream-iu,environment:{{datadog_environment}},backup:{{backup_tag}},service:openmrs-refapp,ansible:full,provisioner:terraform"

docker_deployment:
 - msf

docker_deployable_images:
 - repository: openmrs/openmrs-reference-application-distro
   compose: msf

letsencrypt_cert_domains:
  - buea.openmrs.org
  - msf-new.openmrs.org

nginx_vhosts:
 - listen: "80"
   server_name: "msf.openmrs.org"
   extra_parameters: |
     return 301 https://$host$request_uri;
 - listen: "443 ssl"
   server_name: "msf.openmrs.org"
   extra_parameters: |
     access_log /var/log/nginx/msf_access.log;
     error_log /var/log/nginx/msf_error.log;
     ssl_certificate /etc/letsencrypt/live/buea.openmrs.org/fullchain.pem;
     ssl_certificate_key /etc/letsencrypt/live/buea.openmrs.org/privkey.pem;
     location ^~ /.well-known/acme-challenge/ {
       root /usr/share/nginx/html;
     }
     location / {
       return 301 https://msf.openmrs.org/openmrs;
     }
     location /openmrs {
       proxy_pass http://127.0.0.1:8084/openmrs;
       }
 - listen: "443 ssl"
   server_name: "buea.openmrs.org"
   extra_parameters: |
     access_log /var/log/nginx/deployer_access.log;
     error_log /var/log/nginx/deployer_error.log;
     ssl_certificate /etc/letsencrypt/live/buea.openmrs.org/fullchain.pem;
     ssl_certificate_key /etc/letsencrypt/live/buea.openmrs.org/privkey.pem;
     location ^~ /.well-known/acme-challenge/ {
       root /usr/share/nginx/html;
     }
     location / {
       proxy_pass http://127.0.0.1:3000/;
     }

aws_access_key_id: '{{ vault_aws_access_key_id }}'
aws_secret_access_key: '{{ vault_aws_secret_access_key }}'
