# New shortener
users:
 ravi:
  comment: Ravi Kapali
  groups: 'admin'
  ssh_key: "ssh-rsa "
 sparsha:
  comment: Sparsha Dotel
  groups: 'admin'
  ssh_key: "ssh-rsa "

datadog_config:
  tags: "provider:jetstream-iu,environment:{{datadog_environment}},backup:{{backup_tag}},service:yourls,ansible:full,provisioner:terraform"

letsencrypt_cert_domains:
   - voi.openmrs.org
   - shortener.openmrs.org

docker_deployment:
   - yourls-docker

docker_deployable_images: []

nginx_vhosts:
  - listen: "80 default_server"
    server_name: "voi.openmrs.org"
    extra_parameters: |
      return 301 https://$host$request_uri;
  - listen: "443 ssl"
    server_name: "voi.openmrs.org"
    extra_parameters: |
      access_log /var/log/nginx/deployer_access.log;
      error_log /var/log/nginx/deployer_error.log;
      ssl_certificate /etc/letsencrypt/live/voi.openmrs.org/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/voi.openmrs.org/privkey.pem;
      location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
      }
      location / {
        root /usr/share/nginx/html;
      }
  - listen: "80"
    server_name: "shortener.openmrs.org"
    extra_parameters: |
      return 301 https://$host$request_uri;
  - listen: "443 ssl"
    server_name: "shortener.openmrs.org"
    extra_parameters: |
      access_log /var/log/nginx/shortener_access.log;
      error_log /var/log/nginx/shortener_error.log;
      ssl_certificate /etc/letsencrypt/live/voi.openmrs.org/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/voi.openmrs.org/privkey.pem;
      location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
      }
      location / {
        proxy_pass http://127.0.0.1:8848/;
      }

aws_access_key_id: '{{ vault_aws_access_key_id }}'
aws_secret_access_key: '{{ vault_aws_secret_access_key }}'
