---
# New shortener
datadog_tags_extra: "service:atlas"

letsencrypt_cert_domains:
   - kisumu.openmrs.org
   - atlas-stg.openmrs.org

docker_deployment:
   - atlas-stg

docker_deployable_images:
   - repository: openmrs/atlas
     compose: atlas

nginx_vhosts:
  - listen: "80 default_server"
    server_name: "kisumu.openmrs.org"
    extra_parameters: |
      return 301 https://$host$request_uri;
  - listen: "443 ssl"
    server_name: "kisumu.openmrs.org"
    extra_parameters: |
      access_log /var/log/nginx/deployer_access.log;
      error_log /var/log/nginx/deployer_error.log;
      ssl_certificate /etc/letsencrypt/live/kisumu.openmrs.org/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/kisumu.openmrs.org/privkey.pem;
      location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
      }
      location / {
        root /usr/share/nginx/html;
      }
  - listen: "80"
    server_name: "atlas-stg.openmrs.org"
    extra_parameters: |
      return 301 https://$host$request_uri;
  - listen: "443 ssl"
    server_name: "atlas-stg.openmrs.org"
    extra_parameters: |
      access_log /var/log/nginx/atlas_access.log;
      error_log /var/log/nginx/atlas_error.log;
      ssl_certificate /etc/letsencrypt/live/kisumu.openmrs.org/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/kisumu.openmrs.org/privkey.pem;
      location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
      }
      location / {
        proxy_pass http://127.0.0.1:8548/;
        fastcgi_buffers 16 16k;
        fastcgi_buffer_size 32k;
        proxy_buffer_size   128k;
        proxy_buffers   4 256k;
        proxy_busy_buffers_size   256k;
      }

aws_access_key_id: '{{ vault_aws_access_key_id }}'
aws_secret_access_key: '{{ vault_aws_secret_access_key }}'
