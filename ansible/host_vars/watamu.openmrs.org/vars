# Addons (in jetstream)
users:
  djazayeri:
   comment: Darius Jazayeri
   groups: 'admin'
   ssh_key: "ssh-rsa  jazayeri@alum.mit.edu"

datadog_config:
  tags: "provider:jetstream-tacc,environment:{{datadog_environment}},backup:{{backup_tag}},service:bamboo-agent,ansible:full,provisioner:terraform"

docker_deployment:
  - addons

docker_deployable_images:
  - repository: openmrs/addonindex
    compose: addons

letsencrypt_cert_domains:
   - watamu.openmrs.org
   - addons.openmrs.org
   - modules.openmrs.org

nginx_vhosts:
  - listen: "80"
    server_name: "modules.openmrs.org"
    extra_parameters: |
      return 301 https://$host$request_uri;
  - listen: "443 ssl"
    server_name: "modules.openmrs.org"
    extra_parameters: |
      access_log /var/log/nginx/modules_access.log;
      error_log /var/log/nginx/modules_error.log;
      ssl_certificate /etc/letsencrypt/live/watamu.openmrs.org/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/watamu.openmrs.org/privkey.pem;
      location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
      }
      location / {
        return 301 https://addons.openmrs.org$request_uri;
      }
  - listen: "80 default_server"
    server_name: "addons.openmrs.org"
    extra_parameters: |
      return 301 https://$host$request_uri;
  - listen: "443 ssl"
    server_name: "addons.openmrs.org"
    extra_parameters: |
      access_log /var/log/nginx/addons_access.log;
      error_log /var/log/nginx/addons_error.log;
      ssl_certificate /etc/letsencrypt/live/watamu.openmrs.org/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/watamu.openmrs.org/privkey.pem;
      location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
      }
      location / {
        proxy_pass http://127.0.0.1:8081/;
      }
  - listen: "443 ssl"
    server_name: "watamu.openmrs.org"
    extra_parameters: |
      access_log /var/log/nginx/deployer_access.log;
      error_log /var/log/nginx/deployer_error.log;
      ssl_certificate /etc/letsencrypt/live/watamu.openmrs.org/fullchain.pem;
      ssl_certificate_key /etc/letsencrypt/live/watamu.openmrs.org/privkey.pem;
      location ^~ /.well-known/acme-challenge/ {
        root /usr/share/nginx/html;
      }
      location / {
        proxy_pass http://127.0.0.1:3000/;
      }

aws_access_key_id: '{{ vault_aws_access_key_id }}'
aws_secret_access_key: '{{ vault_aws_secret_access_key }}'
